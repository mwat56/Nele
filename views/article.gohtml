{{- define "article" -}}
{{template "htmlpage" .}}
{{- end -}}

{{- define "bodypage" -}}
	<dl class="posting"><dt>{{$.Posting.Date}}</dt>
		{{- $ID := $.Posting.ID -}}
		<dd id="manuscript"><a class="idlink" id="{{$ID}}" href="{{.weekURL}}/#p{{$ID}}">[*]</a>
		{{- $.Posting.Post}}</dd>
	</dl>
	{{- if .isAuth -}}
		<p class="right small">
		[ <a href="/d/{{$ID}}">date</a> ] &nbsp;
		[ <a href="/e/{{$ID}}">edit</a> ] &nbsp;
		[ <a href="/r/{{$ID}}">remove</a> ]
		</p>
	{{- end -}}
{{- end -}}
