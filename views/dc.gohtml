			<input type="time" id="hms" name="hms" value="{{.HMS}}"></p>
			<p class="right"><input type="reset" name="reset" title="" value=" ZurÃ¼cksetzen "> &nbsp;
			<input type="submit" name="submit" title="" value=" Speichern "></p>
		{{- else -}}
			<p class="right"><label for="ymd">Date: </label> &nbsp;
			<input type="date" id="ymd" name="ymd" max="{{.NOW}}" value="{{.YMD}}"></p>
			<p class="right"><label for="hms">Time: </label> &nbsp;
			<input type="time" id="hms" name="hms" value="{{.HMS}}"></p>
