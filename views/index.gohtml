{{- define "index" -}}
{{template "htmlpage" .}}
{{- end -}}

{{- define "bodypage" -}}
{{- $lang := "de" -}}
{{- if .Lang}}{{$lang = .Lang}}{{end -}}
{{- $title:= "" -}}
<dl class="posting">
	{{- $lastDate := change -}}
	{{- range $i, $post := $.Postings -}}
		{{- $date := $post.Date -}}
		{{- if $lastDate.Changed $date -}}
			<dt>{{$date}}</dt>
		{{- end -}}
		{{- $ID := $post.ID -}}
		{{- if eq $lang "de" -}}
			{{- $title = "zum Artikel springen" -}}
		{{- else -}}
			{{- $title = "jump to article" -}}
		{{- end -}}
		<dd><a class="idlink" id="p{{$ID}}" href="/p/{{$ID}}" title=" {{$title}} ">[*]</a>
		{{- $post.Post -}}</dd>
	{{- end -}}
</dl>
{{- if .nextLink -}}
	{{- if eq $lang "de" -}}
		{{- $title = "n√§chste Seite" -}}
	{{- else -}}
		{{- $title = "next page" -}}}
	{{- end -}}
<p id="next"><a href="{{.nextLink}}" title=" {{$title}} ">&raquo;&raquo;</a></p>
{{- end -}}
{{- end -}}
